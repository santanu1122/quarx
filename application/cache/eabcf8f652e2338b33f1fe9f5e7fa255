<script type="text/javascript">
    
    function cloudCatcher(){
        $('#backupBtn').parent().hide();
        $('#loader').show();
        setInterval(function(){ $('#loader p').append(' .') }, 200);
        
        $.ajax({
            type: 'POST',
            url: "http://localhost:8888/__quarx__/quarx/admin/cloudcatcher/backup/",
            data: { backup: true, q_csrf_token: '19c6019b1fbfdef1096d44ca335b55e5' },
            dataType: "html",
            success: function(data){
                if(data == 1){
                    window.location = 'http://localhost:8888/__quarx__/quarx/admin/cloudcatcher'+'?download';
                }else{

                }
            }
        });
    }

</script>


